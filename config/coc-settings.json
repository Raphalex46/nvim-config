{
  "rust-analyzer.server.path": "rust-analyzer",
  "clangd.enabled": true,
  "inlayHint.enable": true,
  "coc.preferences.formatOnSave": true,
  "Lua.diagnostics.globals": [
    "vim"
  ],
  "languageserver": {
    "godot": {
      "host": "127.0.0.1",
      "filetypes": [
        "gdscript"
      ],
      "port": 6005
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": [
        "haskell",
        "lhaskell"
      ],
      "settings": {
        "haskell": {
          "formattingProvider": "ormolu"
        }
      }
    }
  }
